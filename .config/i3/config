# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"
bindsym $mod+b bar mode toggle

bar {
  #font pango: Tahoma Regular 8
  font pango: BmPlus HP 100LX 6x8 Regular 5
  #font pango: BmPlus HP 100LX 6x8 Regular 6
  position top
  strip_workspace_numbers no
  tray_padding 0
  status_command i3blocks -c "/etc/i3blocks.conf"
	i3bar_command i3bar --transparency
  modifier none
    colors {
        background #dfdfdf
        statusline #ffffff
        separator #666666

        focused_workspace  #dfdfdf #dfdfdf #000000
        active_workspace   #dfdfdf #c0c0c0 #000000
        inactive_workspace #dfdfdf #dfdfdf #999999
        urgent_workspace   #ff0000 #ff0000 #c0c0c0
        binding_mode       #c0c0c0 #c0c0c0 #000000
    }
}

